---
interface Props {
  variant?: 'full' | 'compact' | 'icon';
  showTagline?: boolean;
}

const { variant = 'full', showTagline = false } = Astro.props;

// Pixel art pattern for waveform/sampler icon (16x16 grid)
const pattern = [
  '................',
  '....GGGG........',
  '...G....G.......',
  '...G.CC.G.......',
  '...G.CC.G.......',
  '....GGGG........',
  '................',
  '.D..C...C...C..D',
  '.D.CC..CCC.CC..D',
  'DDCCC.CCCCC.CCCDD',
  'MCCCCCCCCCCCCCCCM',
  'MM.CCC.CCC.CCC.MM',
  'YY..C...C...C..YY',
  'YY.............YY',
  '.YY...........YY.',
  '..YYYYYYYYYYYYY..',
];

const colorMap: Record<string, string> = {
  'C': 'p-cyan',
  'M': 'p-magenta',
  'G': 'p-green',
  'Y': 'p-yellow',
  'D': 'p-dim',
  '.': ''
};

const pixels = pattern.flatMap(row =>
  row.split('').map(char => colorMap[char] || '')
);
---

{variant === 'full' && (
  <div class="logo-container">
    <div class="logo logo-full">
      <div class="icon">
        {pixels.map(colorClass => (
          <div class={`pixel ${colorClass}`}></div>
        ))}
      </div>
      <div class="text-group">
        <div class="title">AUDIO<br />CONTROL</div>
        <div class="subtitle">.ORG</div>
      </div>
    </div>
    {showTagline && (
      <div class="tagline">OPEN SOURCE TOOLS FOR VINTAGE GEAR</div>
    )}
  </div>
)}

{variant === 'compact' && (
  <div class="logo logo-compact">
    <div class="icon">
      {pixels.map(colorClass => (
        <div class={`pixel ${colorClass}`}></div>
      ))}
    </div>
    <div class="title">AUDIOCONTROL</div>
  </div>
)}

{variant === 'icon' && (
  <div class="logo logo-icon-only">
    <div class="icon">
      {pixels.map(colorClass => (
        <div class={`pixel ${colorClass}`}></div>
      ))}
    </div>
  </div>
)}

<style>
  @import url('https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap');

  .logo-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
  }

  .logo {
    display: flex;
    align-items: center;
    font-family: 'Press Start 2P', monospace;
    position: relative;
  }

  /* Full version */
  .logo-full {
    gap: 24px;
    padding: 32px 48px;
    background: linear-gradient(180deg, #1a1a2e 0%, #0f0f1a 100%);
    border: 4px solid #00ff88;
    box-shadow:
      0 0 20px rgba(0, 255, 136, 0.3),
      inset 0 0 40px rgba(0, 255, 136, 0.05);
  }

  .logo-full::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, #ff00ff, #00ffff, #00ff88, #ff00ff);
    z-index: -1;
    filter: blur(8px);
    opacity: 0.5;
  }

  .logo-full::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(0, 0, 0, 0.1) 2px,
      rgba(0, 0, 0, 0.1) 4px
    );
    pointer-events: none;
  }

  .logo-full .icon {
    width: 80px;
    height: 80px;
  }

  .logo-full .title {
    font-size: 28px;
    letter-spacing: 4px;
  }

  /* Compact version */
  .logo-compact {
    gap: 16px;
    padding: 16px 24px;
    background: #0f0f1a;
    border: 3px solid #00ff88;
  }

  .logo-compact .icon {
    width: 48px;
    height: 48px;
  }

  .logo-compact .title {
    font-size: 16px;
    letter-spacing: 2px;
  }

  /* Icon only version */
  .logo-icon-only {
    display: inline-flex;
  }

  .logo-icon-only .icon {
    width: 64px;
    height: 64px;
  }

  /* Pixel art icon */
  .icon {
    display: grid;
    grid-template-columns: repeat(16, 1fr);
    grid-template-rows: repeat(16, 1fr);
    gap: 1px;
    image-rendering: pixelated;
  }

  .pixel {
    background: transparent;
  }

  .p-cyan { background: hsl(174 90% 70%); box-shadow: 0 0 4px hsl(174 90% 70%); }
  .p-magenta { background: hsl(4 90% 72%); box-shadow: 0 0 4px hsl(4 90% 72%); }
  .p-green { background: hsl(152 80% 55%); box-shadow: 0 0 4px hsl(152 80% 55%); }
  .p-yellow { background: hsl(45 90% 60%); box-shadow: 0 0 4px hsl(45 90% 60%); }
  .p-dim { background: #334455; }

  /* Text styles */
  .text-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .title {
    background: linear-gradient(180deg, #00ffff 0%, #00ff88 50%, #ffff00 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    filter: drop-shadow(0 0 8px rgba(0, 255, 136, 0.5));
  }

  .subtitle {
    font-size: 8px;
    color: #ff00ff;
    letter-spacing: 2px;
    text-shadow: 0 0 10px #ff00ff;
  }

  .tagline {
    font-family: 'Press Start 2P', monospace;
    font-size: 10px;
    color: #00ffff;
    letter-spacing: 1px;
    opacity: 0.8;
  }
</style>
