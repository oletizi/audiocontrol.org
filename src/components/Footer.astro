<style>
  .site-footer {
    margin-top: 4rem;
    padding: 2rem 0;
    border-top: 1px solid hsl(var(--border));
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.25rem;
    text-align: center;
  }

  .footer-brand {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .footer-logo {
    font-family: var(--font-heading);
    font-size: 0.9375rem;
    font-weight: 600;
    color: hsl(var(--foreground));
  }

  .footer-logo .org {
    color: hsl(var(--primary));
  }

  .footer-divider {
    color: hsl(var(--muted-foreground));
  }

  .footer-tagline {
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
  }

  .footer-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    color: hsl(var(--muted-foreground));
    transition: color 0.2s;
    border-radius: 0.25rem;
  }

  .social-link:hover,
  .social-link:focus-visible {
    color: hsl(var(--foreground));
  }

  .social-link:focus-visible {
    outline: 2px solid hsl(var(--primary));
    outline-offset: 2px;
  }

  .social-link svg {
    width: 1.25rem;
    height: 1.25rem;
  }

  .copyright {
    font-size: 0.75rem;
    color: hsl(var(--muted-foreground));
    margin: 0;
  }
</style>
