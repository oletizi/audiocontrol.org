---
import Logo from '../components/Logo.astro';
import '../styles/design-tokens.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  jsonLd?: Record<string, unknown>;
}

const {
  title = 'audiocontrol.org',
  description = 'Open source web interfaces for vintage samplers and synthesizers.',
  image = '/images/og-image.png',
  type = 'website',
  jsonLd: customJsonLd,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const imageURL = new URL(image, Astro.site);

const defaultJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: 'audiocontrol.org',
  url: 'https://audiocontrol.org',
  logo: 'https://audiocontrol.org/favicon.svg',
  description: 'Open source web interfaces for vintage samplers and synthesizers.',
  sameAs: [
    'https://github.com/audiocontrol-org'
  ]
};

const jsonLd = customJsonLd ?? defaultJsonLd;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageURL} />
    <meta property="og:site_name" content="audiocontrol.org" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageURL} />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-2N7X29Y1RN"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-2N7X29Y1RN');
    </script>
    <style>
      @font-face {
        font-family: 'Inter';
        src: url('/fonts/inter-regular.woff2') format('woff2');
        font-weight: 400;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'Inter';
        src: url('/fonts/inter-medium.woff2') format('woff2');
        font-weight: 500;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'Inter';
        src: url('/fonts/inter-semibold.woff2') format('woff2');
        font-weight: 600;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'Inter';
        src: url('/fonts/inter-bold.woff2') format('woff2');
        font-weight: 700;
        font-style: normal;
        font-display: swap;
      }

      :global(h1), :global(h2), :global(h3), :global(h4), :global(h5), :global(h6) {
        font-family: var(--font-heading);
      }

      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }

      html {
        font-family: var(--font-body);
        font-size: 16px;
        background: hsl(var(--background));
        color: hsl(var(--foreground));
      }

      body {
        min-height: 100vh;
        padding: 1.5rem;
        margin: 0 auto;
        width: 100%;
        max-width: 100%;
      }

      @media (min-width: 640px) {
        body {
          padding: 2rem;
          max-width: 600px;
        }
      }

      @media (min-width: 1024px) {
        body {
          max-width: 800px;
        }
      }

      @media (min-width: 1280px) {
        body {
          max-width: 900px;
        }
      }

      h1, h2, p {
        margin: 0;
      }

      header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        position: sticky;
        top: 0;
        background: hsl(var(--background) / 0.8);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        padding: 1rem 0;
        z-index: 100;
        border-bottom: 1px solid hsl(var(--border));
      }

      .header-link {
        display: inline-flex;
        align-items: center;
        gap: 1.25rem;
        text-decoration: none;
        color: inherit;
      }

      .header-text h1 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
      }

      .tagline {
        color: hsl(var(--muted-foreground));
        font-size: 1rem;
      }

      .site-nav {
        display: flex;
        gap: 0.5rem;
      }

      .nav-item {
        position: relative;
      }

      .nav-button {
        background: none;
        border: none;
        color: hsl(var(--muted-foreground));
        font-size: 0.9rem;
        padding: 0.5rem 0.75rem;
        cursor: pointer;
        transition: color 0.2s;
        font-family: inherit;
      }

      .nav-button:hover {
        color: hsl(var(--foreground));
      }

      .nav-button::after {
        content: ' â–¾';
        font-size: 0.7em;
      }

      .dropdown {
        position: absolute;
        top: 100%;
        left: 0;
        background: hsl(var(--card));
        border: 1px solid hsl(var(--border));
        border-radius: 6px;
        min-width: 160px;
        opacity: 0;
        visibility: hidden;
        transform: translateY(-4px);
        transition: opacity 0.15s, transform 0.15s, visibility 0.15s;
        z-index: 100;
      }

      .nav-item:hover .dropdown,
      .nav-item:focus-within .dropdown {
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
      }

      .dropdown a {
        display: block;
        padding: 0.6rem 1rem;
        color: hsl(var(--foreground));
        text-decoration: none;
        font-size: 0.9rem;
        transition: background 0.15s;
      }

      .dropdown a:hover {
        background: hsl(var(--border));
      }

      .dropdown a:first-child {
        border-radius: 6px 6px 0 0;
      }

      .dropdown a:last-child {
        border-radius: 0 0 6px 6px;
      }

      .dropdown a:only-child {
        border-radius: 6px;
      }

      footer {
        margin-top: 4rem;
        padding-top: 2rem;
        border-top: 1px solid hsl(var(--border));
      }

      .footer-content {
        display: flex;
        flex-direction: column;
        gap: 2rem;
      }

      .footer-nav {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 2rem;
      }

      .footer-nav-section {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      }

      .footer-nav-section h3 {
        font-size: 0.875rem;
        font-weight: 600;
        color: hsl(var(--foreground));
        margin: 0 0 0.5rem 0;
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }

      .footer-nav-section a {
        color: hsl(var(--muted-foreground));
        text-decoration: none;
        font-size: 0.875rem;
        transition: color 0.2s;
      }

      .footer-nav-section a:hover {
        color: hsl(var(--foreground));
      }

      .footer-bottom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
        padding-top: 1.5rem;
        border-top: 1px solid hsl(var(--border));
      }

      .social-links {
        display: flex;
        gap: 1rem;
      }

      .social-links a {
        color: hsl(var(--muted-foreground));
        transition: color 0.2s;
      }

      .social-links a:hover {
        color: hsl(var(--foreground));
      }

      .social-links svg {
        width: 24px;
        height: 24px;
      }

      .copyright {
        color: hsl(var(--muted-foreground));
        font-size: 0.875rem;
        margin: 0;
      }
    </style>
    <slot name="head" />
  </head>
  <body>
    <header>
      <a href="/" class="header-link">
        <Logo variant="icon" />
        <div class="header-text">
          <h1>audiocontrol.org</h1>
          <p class="tagline">Open source audio tools.</p>
        </div>
      </a>
      <nav class="site-nav">
        <div class="nav-item">
          <button class="nav-button">Blog</button>
          <div class="dropdown">
            <a href="/blog/roland-s330-sampler-editor-feb-2026-update/">S-330 Editor: February 2026</a>
            <a href="/blog/free-roland-s330-sampler-editor/">Roland S-330 Editor</a>
            <a href="/blog/roland-s-series-samplers/">Roland S-Series Samplers</a>
          </div>
        </div>
        <div class="nav-item">
          <button class="nav-button">Hardware</button>
          <div class="dropdown">
            <a href="/roland/s330/">Roland S-330</a>
            <a href="/roland/s550/">Roland S-550</a>
            <a href="/roland/s770/">Roland S-770</a>
            <a href="/roland/w30/">Roland W-30</a>
          </div>
        </div>
        <div class="nav-item">
          <button class="nav-button">Docs</button>
          <div class="dropdown">
            <a href="/docs/roland/samplers/s-330/">Roland S-330</a>
          </div>
        </div>
        <div class="nav-item">
          <button class="nav-button">Editors</button>
          <div class="dropdown">
            <a href="/roland/s330/editor">Roland S-330</a>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <div class="footer-content">
        <nav class="footer-nav">
          <div class="footer-nav-section">
            <h3>Blog</h3>
            <a href="/blog/roland-s330-sampler-editor-feb-2026-update/">S-330 Editor: February 2026</a>
            <a href="/blog/free-roland-s330-sampler-editor/">Roland S-330 Editor</a>
            <a href="/blog/roland-s-series-samplers/">Roland S-Series Samplers</a>
          </div>
          <div class="footer-nav-section">
            <h3>Hardware</h3>
            <a href="/roland/s330/">Roland S-330</a>
            <a href="/roland/s550/">Roland S-550</a>
            <a href="/roland/s770/">Roland S-770</a>
            <a href="/roland/w30/">Roland W-30</a>
          </div>
          <div class="footer-nav-section">
            <h3>Resources</h3>
            <a href="/docs/roland/samplers/s-330/">S-330 Documentation</a>
            <a href="/roland/s330/editor">S-330 Editor</a>
          </div>
        </nav>
        <div class="footer-bottom">
          <div class="social-links">
