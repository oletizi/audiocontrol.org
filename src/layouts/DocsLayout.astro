---
import Layout from './Layout.astro';

interface Props {
  frontmatter?: {
    title: string;
    description?: string;
  };
  title?: string;
  description?: string;
}

const { frontmatter, title: directTitle, description: directDescription } = Astro.props;
const title = frontmatter?.title ?? directTitle ?? 'Documentation';
const description = frontmatter?.description ?? directDescription;
---

<Layout title={title} description={description}>
  <article class="docs-article">
    <slot />
  </article>
</Layout>

<style>
  .docs-article {
    line-height: 1.7;
  }

  .docs-article :global(h1) {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .docs-article :global(h2) {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--fg);
  }

  .docs-article :global(h3) {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--fg);
  }

  .docs-article :global(p) {
    margin-bottom: 1.25rem;
    color: var(--fg);
  }

  .docs-article :global(ul),
  .docs-article :global(ol) {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }

  .docs-article :global(li) {
    margin-bottom: 0.5rem;
  }

  .docs-article :global(strong) {
    color: var(--fg);
    font-weight: 600;
  }

  .docs-article :global(a) {
    color: var(--accent);
    text-decoration: none;
  }

  .docs-article :global(a:hover) {
    text-decoration: underline;
  }

  .docs-article :global(hr) {
    border: none;
    border-top: 1px solid var(--border);
    margin: 2rem 0;
  }

  .docs-article :global(em) {
    color: var(--muted);
  }

  .docs-article :global(code) {
    background: var(--card-bg);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
  }

  .docs-article :global(pre) {
    background: var(--card-bg);
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: 1.25rem;
  }

  .docs-article :global(pre code) {
    background: none;
    padding: 0;
  }

  .docs-article :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem 0;
    border: 1px solid var(--border);
  }
</style>
